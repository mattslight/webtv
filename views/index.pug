extends layout

block content
  #wrapper
    .overlay
      catChan
    nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      ul.nav.sidebar-nav
        li.sidebar-brand
          a(href='#') WebTV
        each category in categories
          if catChan[category['categoryId']].length > 1
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown') #{category['categoryName']}
                span.caret
              ul.dropdown-menu(role='menu')
                li.dropdown-header
                each chan in catChan[category['categoryId']]
                  li
                    a(href='#' + chan['channelId']) #{chan['channelName']}
          else
            li
              a(href='#' + category['categoryId']) #{category['categoryName']}
    #page-content-wrapper
      button.hamburger.is-closed(type='button', data-toggle='offcanvas')
        span.hamb-top
        span.hamb-middle
        span.hamb-bottom
      .container-fluid
        .row
          #jwplayer
          script(type='text/javaScript').
            var playerInstance = jwplayer("jwplayer");
          script(src='//content.jwplatform.com/players/N01Rp9Ck-Hfok2Nah.js')